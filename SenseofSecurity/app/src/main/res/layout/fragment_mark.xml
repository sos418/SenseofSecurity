<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1216qdf.senseofsecurity.MarkFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxBathroom"
                android:background="@drawable/custombathroom"
                android:button="@null"
                android:layout_marginRight="26dp"
                />
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxWater"
                android:background="@drawable/customwater"
                android:button="@null"
                android:layout_marginRight="26dp"
                />
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxGarbage"
                android:background="@drawable/customgarbage"
                android:button="@null"
                />
        </TableRow>
        <TableRow>
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxSmoke"
                android:background="@drawable/customsmoke"
                android:button="@null"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                />
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxWatch"
                android:background="@drawable/customwatch"
                android:button="@null"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                />
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxCar"
                android:background="@drawable/customcar"
                android:button="@null"
                android:layout_marginTop="16dp"
                />
        </TableRow>
        <TableRow>
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxNight"
                android:background="@drawable/customnight"
                android:button="@null"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                />
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxLove"
                android:background="@drawable/customlove"
                android:button="@null"
                android:layout_marginRight="26dp"
                android:layout_marginTop="16dp"
                />
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/checkboxSafe"
                android:background="@drawable/customsafe"
                android:button="@null"
                android:layout_marginTop="16dp"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>
